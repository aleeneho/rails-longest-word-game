<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

<div class="container p-2 m-3">
  <h1>New Game</h1>
  <div class="card col-10">
    <div class="row p-4">
          <% @letters.each do |letter| %>
              <div class="col-1"><%= letter %></div>
          <% end %>
    </div>
  </div>

  <p>What is the longest word you can find?</p>

    <form action="/score" method="POST" data-turbo="false">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :grid_words, @letters %>
      <input type="text" name="words" class="form-control" value="<%= params[:words] %>" placeholder="Anyword?" >
      <input type="submit" name="" id="" value="Play">
    </form>
</div>
